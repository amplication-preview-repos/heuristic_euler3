datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt           DateTime @default(now())
  email               String?  @unique
  firstName           String?
  id                  String   @id @default(cuid())
  lastName            String?
  password            String
  phone               String?
  roles               Json
  socialMediaAccounts Json?
  telegramAccount     String?
  updatedAt           DateTime @updatedAt
  username            String   @unique
}
